<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="hautelook_alice.faker" class="Faker\Generator">
            <factory class="Faker\Factory" method="create" />
            <argument>%hautelook_alice.locale%</argument>
            <call method="seed">
                <argument type="string" id="%seed%" />
            </call>
        </service>

        <service id="hautelook_alice.fixtures.loader" class="Hautelook\AliceBundle\Alice\Fixtures">
            <argument>%hautelook_alice.locale%</argument>
            <argument type="collection" />
            <argument>%hautelook_alice.seed%</argument>
            <tag name="hautelook_alice.fixtures.loader" />
        </service>

        <service id="hautelook_alice.fixtures.loader_chain"
                 class="Hautelook\AliceBundle\Alice\Fixtures\Loader\LoaderChain" />
        <service id="hautelook_alice.processor_chain"
                 class="Hautelook\AliceBundle\Alice\ProcessorChain" />
        <service id="hautelook_alice.faker.provider_chain"
                 class="Hautelook\AliceBundle\Faker\Provider\ProviderChain" />
    </services>

</container>
