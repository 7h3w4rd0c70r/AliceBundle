<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="hautelook_alice.locator.env_files"
                 class="Hautelook\AliceBundle\Locator\EnvFilesLocator">
            <argument type="string">%hautelook_alice.fixtures_path%</argument>
            <tag name="hautelook_alice.locator" />
        </service>

        <service id="hautelook_alice.locator.env_directory"
                 class="Hautelook\AliceBundle\Locator\EnvDirectoryLocator">
            <argument type="string">%hautelook_alice.fixtures_path%</argument>
            <tag name="hautelook_alice.locator" />
        </service>

        <service id="hautelook_alice.locator.registry"
                 class="Hautelook\AliceBundle\Locator\LocatorRegistry">
            <!-- Passed via a Compiler Pass -->
        </service>

        <service id="hautelook_alice.locator"
                 alias="hautelook_alice.locator.registry" />
    </services>

</container>
